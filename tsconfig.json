{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "include": [
        "tests/**/*.ts",
        "playwright.config.ts",
        "src/**/*.ts"
    ]
}