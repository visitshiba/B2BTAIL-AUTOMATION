{
  "name": "playwright-ts-framework",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docker:build": "docker build --no-cache -t b2btail-playwright .",
    "docker:test": "docker run --rm -v %cd%/playwright-report:/app/playwright-report b2btail-playwright",
    "docker:test:shard": "npm run clean:reports && ts-node src/scripts/run-docker.ts",
    "clean:reports": "ts-node src/scripts/clean-reports.ts",  
    "test": "npm run clean:reports && playwright test",
    "lint": "eslint . --ext .ts",
    "build": "tsc -p tsconfig.json",
    "report:allure": "npx allure serve allure-results",
    "report": "npx playwright show-report",
    "report:allure:gen": "npx allure generate allure-results --clean -o allure-report",
    "report:merge": "npx playwright merge-reports ./blob-report --reporter=html,json"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.57.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.0.1",
    "allure-commandline": "^2.32.0",  
    "allure-playwright": "^3.4.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "playwright": "^1.57.0",
    "prettier": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}