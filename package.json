{
  "name": "playwright-ts-framework",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docker:build": "docker build --no-cache -t b2btail-playwright .",
    "docker:test": "docker run --rm -v $(pwd)/playwright-report:/app/playwright-report b2btail-playwright",
    "clean:allure": "rm -rf allure-results allure-report",
    "test": "npm run clean:allure && playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "PWDEBUG=1 playwright test",
    "test:report": "playwright show-report",
    "lint": "eslint . --ext .ts",
    "build": "tsc -p tsconfig.json",
    "ci": "playwright test --reporter=list --workers=2",
    "report": "allure serve allure-results",
    "report:default": "npx playwright show-report"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.57.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.0.1",
    "allure-playwright": "^3.4.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "playwright": "^1.57.0",
    "prettier": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}